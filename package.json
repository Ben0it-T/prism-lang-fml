{
  "name": "prism-lang-fml",
  "version": "0.1.0",
  "description": "A Prism.js language definition plugin for FHIR Mapping Language (FML) syntax highlighting",
  "main": "dist/prism-lang-fml.min.js",
  "scripts": {
    "dev": "npm run build:dev && npm run watch",
    "watch": "nodemon --watch src --ext js,css --exec npm run build:dev",
    "build": "npm run build:js && npm run build:css",
    "build:dev": "npm run build:js:dev && npm run build:css:dev",
    "build:js": "terser src/prism-lang-fml.js -o dist/prism-lang-fml.min.js -c -m --comments '/^!/'",
    "build:js:dev": "mkdir -p dist && cp src/prism-lang-fml.js dist/prism-lang-fml.js",
    "build:css": "cleancss -o dist/prism-lang-fml.min.css src/prism-lang-fml.css",
    "build:css:dev": "mkdir -p dist && cp src/prism-lang-fml.css dist/prism-lang-fml.css 2>/dev/null || true",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:visual": "http-server -o test/visual.html",
    "lint": "eslint src test --ext .js",
    "lint:fix": "eslint src test --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,md,css,html}\"",
    "format:check": "prettier --check \"**/*.{js,json,md,css,html}\"",
    "prepublishOnly": "npm run lint && npm test && npm run build",
    "prepare": "npm run build",
    "release": "npm run prepublishOnly && npm publish",
    "clean": "rm -rf dist coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/prism-lang-fml.git"
  },
  "keywords": [
    "prism",
    "prismjs",
    "syntax-highlighting",
    "language-definition",
    "plugin",
    "highlighting",
    "fml",
    "fhir",
    "mapping",
    "transformation",
    "healthcare",
    "hl7",
    "interoperability"
  ],
  "author": "Your Name",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yourusername/prism-lang-fml/issues"
  },
  "homepage": "https://github.com/yourusername/prism-lang-fml#readme",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "peerDependencies": {
    "prismjs": "^1.29.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.3",
    "@babel/preset-env": "^7.23.3",
    "babel-jest": "^29.7.0",
    "clean-css-cli": "^5.6.2",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.6.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.1.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "prismjs": "^1.29.0",
    "terser": "^5.24.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "setupFiles": [
      "./test/setup.js"
    ],
    "testMatch": [
      "**/test/**/*.test.js"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
